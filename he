import os
from flask import Flask, jsonify
import pymysql.cursors

app = Flask(__name__)
DB_HOST = os.environ.get('DB_HOST', 'db') # 'db' est le nom du service dans docker-compose
DB_USER = os.environ.get('DB_USER', 'clienthub_user')
DB_PASSWORD = os.environ.get('DB_PASSWORD', '123456')
DB_NAME = os.environ.get('DB_NAME', 'clienthub_db')
DB_PORT = int(os.environ.get('DB_PORT', 3306))

def get_db_connection():
    return pymysql.connect(
        host=DB_HOST,
        user=DB_USER,
        password=DB_PASSWORD,
        database=DB_NAME,
        port=DB_PORT,
        cursorclass=pymysql.cursors.DictCursor
    )

def init_db():
    try:
        conn = get_db_connection()
        conn.close()
        print("INFO: Connexion à la base de données réussie.")
    except Exception as e:
        print(f"ERREUR: Impossible de se connecter à la base de données : {e}")
init_db()

@app.route('/health', methods=['GET'])
def health_check():
    return jsonify({"status": "ok"})
@app.route('/clients', methods=['GET'])
def list_clients():
    clients = []
    try:
        conn = get_db_connection()
        with conn.cursor() as cursor:
            cursor.execute("SELECT id, nom, email FROM clients")
            clients = cursor.fetchall()
    except Exception as e:
        return jsonify({"error": "Erreur de base de données", "details": str(e)}), 500
    return jsonify({"clients": clients, "count": len(clients)})

if __name__ == '__main__':
    app.run(host='0.0.0.0', port=5000)
