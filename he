version: '3.8'

services:
  api:
    build: . # Utilise le Dockerfile local
    container_name: clienthub-api
    ports:
      - "5000:5000"
    environment:
      DB_HOST: db
      DB_USER: Ubuntu24
      DB_PASSWORD: 123456
      DB_NAME: clienthub_db
      DB_PORT: 3306
    networks:
      - clienthub_network
    depends_on:
      - db 
  db:
    image: mysql:8.0
    container_name: gitprojet-mysql
    environment:
      MYSQL_ROOT_PASSWORD: 123456
      MYSQL_DATABASE: gitprojet
      MYSQL_USER: Ubuntu24
      MYSQL_PASSWORD: 123456
    volumes:
      - clienthub_data:/var/lib/mysql
      - ./init.sql:/docker-entrypoint-initdb.d/init.sql:ro
    networks:
      - clienthub_network
  web:
    image: nginx:latest
    container_name: clienthub-web
    ports:
      - "80:80"
    volumes:
      - ./site:/usr/share/nginx/html:ro
    networks:
      - clienthub_network

networks:
  clienthub_network:
    driver: bridge

volumes:
  clienthub_data:
