version: "3.8"

services:
  db:
    image: mysql:8.0
    container_name: clienthub_db
    environment:
      MYSQL_ROOT_PASSWORD: rootpassword
      MYSQL_DATABASE: clienthub
      MYSQL_USER: clientuser
      MYSQL_PASSWORD: clientpass
    volumes:
      - db_data:/var/lib/mysql
      - ./db/init.sql:/docker-entrypoint-initdb.d/init.sql:ro
    networks:
      - clienthub_net
    restart: unless-stopped

  api:
    build:
      context: ./api
    container_name: clienthub_api
    environment:
      DB_HOST: db
      DB_PORT: 3306
      DB_NAME: clienthub
      DB_USER: clientuser
      DB_PASSWORD: clientpass
      FLASK_ENV: production
    depends_on:
      - db
    ports:
      - "5000:5000"
    networks:
      - clienthub_net
    restart: unless-stopped

  web:
    image: nginx:stable
    container_name: clienthub_web
    volumes:
      - ./site:/usr/share/nginx/html:ro
    ports:
      - "8080:80"
    networks:
      - clienthub_net
    restart: unless-stopped

volumes:
  db_data:

networks:
  clienthub_net:
    driver: bridge
